{
  "family": "worker-enqueue-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::123456789012:role/unstruct_ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::123456789012:role/ecsTaskRole-workers",
  "containerDefinitions": [
    {
      "name": "worker-enqueue",
      "image": "public.ecr.aws/amazonlinux/amazonlinux:latest",
      "essential": true,
      "portMappings": [{ "containerPort": 80, "protocol": "tcp" }],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/worker-enqueue-task",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "worker-enqueue"
        }
      }
      /* Optionally add environment or secrets blocks here */
    }
  ]
}
